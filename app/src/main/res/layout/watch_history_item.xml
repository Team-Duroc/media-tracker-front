<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="watchHistory"
            type="com.northcoders.media_tracker_front.model.WatchHistory" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <ImageView
                android:id="@+id/watch_history_img"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/vintage_television"
                android:scaleType="centerCrop"
                android:src="@drawable/vintage_tv"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <TextView
                    android:id="@+id/watchHistory_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/title"
                    android:text="@{watchHistory.title}"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/watchHistory_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Watch History description."
                    android:text="@{watchHistory.info}"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/watchHistory_title" />

                <!--        {watchHistory.rating}-->
                <RatingBar
                    android:id="@+id/watchHistory_rating"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:scaleX="0.4"
                    android:scaleY="0.4"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageButton
                    android:id="@+id/watch_history_rewatch_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/roundbackground"
                    android:src="@drawable/ic_rewatch_foreground"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>
